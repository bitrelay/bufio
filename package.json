{
  "name": "@bitrelay/bufio",
  "version": "1.0.0",
  "description": "Buffer and serialization utilities for typescript",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "lint": "tslint -c tslint.json -p tsconfig.json 'src/**/*.ts'",
    "format": "prettier --config .prettierrc --write --list-different 'src/**/*.ts'",
    "test": "mocha dist/test --colors --exit --require source-map-support/register",
    "build": "tsc",
    "watch": "tsc -w",
    "prepublishOnly": "npm run build && npm run format && npm run lint && npm test"
  },
  "keywords": [
    "buffer",
    "serialization"
  ],
  "author": "Philipp Petzold <ppetzold@protonmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@types/mocha": "^5.2.7",
    "@types/node": "^12.12.21",
    "mocha": "^6.2.2",
    "prettier": "^1.19.1",
    "source-map-support": "^0.5.16",
    "tslint": "^5.20.1",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.7.4"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bitrelay/bufio.git"
  },
  "homepage": "https://github.com/bitrelay/bufio#readme",
  "bugs": {
    "url": "https://github.com/bitrelay/bufio/issues"
  },
  "publishConfig": {
    "access": "public"
  }
}
