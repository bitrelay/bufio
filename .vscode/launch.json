{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run tests",
            "type": "node",
            "request": "launch",
            "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
            "stopOnEntry": false,
            "args": ["dist/test/index.js", "--colors", "--exit", "--require", "source-map-support/register"],
            "runtimeArgs": ["--nolazy"],
            "sourceMaps": true,
            "smartStep": true,
            "outputCapture": "std"
        }
    ]
}
