{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run tests",
            "type": "node",
            "request": "launch",
            "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
            "internalConsoleOptions": "openOnSessionStart",
            "stopOnEntry": false,
            "args": ["--colors", "--exit"],
            "runtimeArgs": ["--nolazy"],
            "sourceMaps": true,
            "smartStep": true,
            "outputCapture": "std"
        }
    ]
}
